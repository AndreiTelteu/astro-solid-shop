---
import { SEO } from "astro-seo";
import '~/styles/variables.scss';
import '~/styles/global.scss';
const {
	title = 'Astro Shop',
	description = 'A simple shop built with Astro and SolidJS',
	...props
} = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<SEO title={title} description={description} {...props} />
<link rel="sitemap" href="/sitemap.xml">
<link rel="alternate" type="application/rss+xml" title="Product Catalog" href="/sitemap.xml" />
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
	href="https://fonts.googleapis.com/css2?family=Inter:wght@200;400;700;900&display=swap"
	rel="stylesheet"
/>
